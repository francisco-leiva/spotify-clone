---
import ViewTransitions from 'astro/components/ViewTransitions.astro'
import Aside from '@/components/Aside/Aside.astro'
import Footer from '@/components/Footer/Footer'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body
    class='h-screen p-2 grid grid-cols-1 grid-rows-[1fr_auto] gap-2 lg:grid-cols-[minmax(280px,350px)_1fr]'
  >
    <Aside />

    <main class='bg-[#121212] [grid-area:main] rounded-lg'>
      <slot />
    </main>

    <Footer client:load transition:name='media-player' transition:persist />

    <style>
      body {
        grid-template-areas:
          'main'
          'player';
      }

      @media (min-width: 1024px) {
        body {
          grid-template-areas:
            'aside main'
            'player player';
        }
      }
    </style>

    <style is:global>
      html {
        font-family: 'CircularStd', system-ui, sans-serif;
        background: #000;
        color: #fff;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Medium.woff2') format('woff2');
        font-weight: 500;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Book.woff2') format('woff2');
        font-weight: 400;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Light.woff2') format('woff2');
        font-weight: 300;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Bold.woff2') format('woff2');
        font-weight: 700;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'CircularStd';
        src: url('/fonts/CircularStd-Black.woff2') format('woff2');
        font-weight: 900;
        font-style: normal;
        font-display: swap;
      }
    </style>
  </body>
</html>
