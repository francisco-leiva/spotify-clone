---
import { Image } from 'astro:assets'
import AsidePlaylistTitle from './AsidePlaylistTitle'

interface Props {
  id: string
  title: string
  cover: string
  artists: string[]
}

const { id, title, cover, artists } = Astro.props
const artistsName = artists.join(', ')
---

<a href={`/playlist/${id}`} class='p-3 flex items-center gap-3'>
  <Image
    src={cover}
    alt={title}
    width={48}
    height={48}
    loading={'eager'}
    class='rounded-sm'
  />

  <div>
    <AsidePlaylistTitle title={title} playlistId={id} client:visible />
    <span class='text-sm opacity-50'>{artistsName}</span>
  </div>
</a>
